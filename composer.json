{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.7.*",
        "laravel/telescope": "^1.0",
        "laravel/tinker": "^1.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.4",
        "fzaninotto/faker": "~1.4",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "~7.0",
        "roave/security-advisories": "dev-master",
        "sensiolabs/security-checker": "^4.1",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": "chmod +x .deploy/pre_commit.sh && .deploy/pre_commit.sh"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-install-cmd": [
            " if [ ! -f .env ]; then if [ -f .env.example ]; then cp .env.example .env; fi; fi",
            "[ -f vendor/bin/cghooks ] && vendor/bin/cghooks add --ignore-lock || echo 'cghooks not found'"
           ],
        "post-update-cmd": [
            "[ -f vendor/bin/cghooks ] && vendor/bin/cghooks update || echo 'cghooks not found'"
            ],
        "cghooks": "vendor/bin/cghooks"
    }
}
